@model Models.Product.ProductCategoryModel

@{
    ViewData["Title"] = "Product Categories";
}

<div class="container">
    <h1 class="my-4">Product Categories</h1>

    <!-- Display Success and Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="mb-3">
        <a href="@Url.Action("AddCategory", "ProductCategory")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Category
        </a>
    </div>

    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Products Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.ProductCategoryList) 
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.ProductCount</td>
                    <td>
                        <a href="@Url.Action("EditCategory", "ProductCategory", new { id = category.ProductCategoryId})" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>

                        <!-- Delete Button -->
                        <button type="button" class="btn btn-danger btn-sm"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal"
                                data-category-name="@category.Name">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this category?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" asp-controller="ProductCategory" method="post">
                    <input type="hidden" id="categoryToDelete" name="name" value="" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Pass the category name to the modal's hidden input field
    var deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        var button = event.relatedTarget; // Button that triggered the modal
        var categoryName = button.getAttribute('data-category-name'); // Extract info from data-* attribute
        var input = document.getElementById('categoryToDelete'); // Hidden input in the modal
        input.value = categoryName; // Set the value
    });
</script>
