@model Models.Product.CreateProductViewModel

@{
    ViewData["Title"] = "Add Product";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<h2>Add Product</h2>

<form asp-action="AddProduct" method="post">
    <!-- Product Name -->
    <div class="mb-3">
        <label asp-for="ProductName" class="form-label">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <!-- Product Number -->
    <div class="mb-3">
        <label asp-for="ProductNumber" class="form-label">Product Number</label>
        <input asp-for="ProductNumber" class="form-control" />
        <span asp-validation-for="ProductNumber" class="text-danger"></span>
    </div>

    <!-- Product Color -->
    <div class="mb-3">
        <label asp-for="ProductColor" class="form-label">Product Color</label>
        <input asp-for="ProductColor" class="form-control" />
        <span asp-validation-for="ProductColor" class="text-danger"></span>
    </div>

    <!-- Safety Stock Level -->
    <div class="mb-3">
        <label asp-for="SafetyStockLevel" class="form-label">Safety Stock Level</label>
        <input asp-for="SafetyStockLevel" class="form-control" type="number" />
        <span asp-validation-for="SafetyStockLevel" class="text-danger"></span>
    </div>

    <!-- Reorder Point -->
    <div class="mb-3">
        <label asp-for="ReorderPoint" class="form-label">Reorder Point</label>
        <input asp-for="ReorderPoint" class="form-control" type="number" />
        <span asp-validation-for="ReorderPoint" class="text-danger"></span>
    </div>

    <!-- Standard Cost -->
    <div class="mb-3">
        <label asp-for="StandardCost" class="form-label">Standard Cost</label>
        <input asp-for="StandardCost" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="StandardCost" class="text-danger"></span>
    </div>

    <!-- List Price -->
    <div class="mb-3">
        <label asp-for="ListPrice" class="form-label">List Price</label>
        <input asp-for="ListPrice" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="ListPrice" class="text-danger"></span>
    </div>

    <!-- Size -->
    <div class="mb-3">
        <label asp-for="Size" class="form-label">Size</label>
        <input asp-for="Size" class="form-control" />
        <span asp-validation-for="Size" class="text-danger"></span>
    </div>

    <!-- Days to Manufacture -->
    <div class="mb-3">
        <label asp-for="DaysToManufacture" class="form-label">Days to Manufacture</label>
        <input asp-for="DaysToManufacture" class="form-control" type="number" />
        <span asp-validation-for="DaysToManufacture" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="SellStartDate" class="form-label">Sell Start Date</label>
        <input asp-for="SellStartDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="SellStartDate" class="text-danger"></span>
    </div>


    <!-- Product Subcategory -->
    <div class="mb-3">
        <label asp-for="ProductSubCategoryId" class="form-label">Product Subcategory</label>
        <select asp-for="ProductSubCategoryId" class="form-select">
            <option value="">Select Subcategory</option>
            @foreach (var subCategory in Model.ProductSubCategory)
            {
                <option value="@subCategory.Id">@subCategory.Name</option>
            }
        </select>
        <span asp-validation-for="ProductSubCategoryId" class="text-danger"></span>
    </div>

    <!-- Product Model -->
    <div class="mb-3">
        <label asp-for="ProductModelId" class="form-label">Product Model</label>
        <select asp-for="ProductModelId" class="form-select">
            <option value="">Select Model</option>
            @foreach (var promodel in Model.ProductModel)
            {
                <option value="@promodel.Id">@promodel.Name</option>
            }
        </select>
        <span asp-validation-for="ProductModelId" class="text-danger"></span>
    </div>

    <!-- Buttons -->
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<!-- Validation Scripts -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
